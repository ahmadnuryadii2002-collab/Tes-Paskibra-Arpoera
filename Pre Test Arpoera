];

// acak soal
soal.sort(() => Math.random() - 0.5);

const form = document.getElementById("quiz");
soal.forEach((s,i)=>{
    form.innerHTML += `
    <div class="question">
    <p>${i+1}. ${s.q}</p>
    ${s.o.map((opt,j)=>`
    <label><input type="radio" name="q${i}" value="${j}"> ${opt}</label>`).join("")}
    </div>`;
});

// TIMER 25 MENIT
let time = 25 * 60;
const timer = setInterval(()=>{
    let m = Math.floor(time/60);
    let s = time%60;
    document.getElementById("time").textContent =
        `${m}:${s<10?"0":""}${s}`;
    time--;
    if(time < 0){
        clearInterval(timer);
        submitTest();
    }
},1000);

function submitTest(){
    clearInterval(timer);
    let score = 0;
    soal.forEach((s,i)=>{
        let ans = document.querySelector(`input[name="q${i}"]:checked`);
        if(ans && Number(ans.value) === s.a) score += 5;
    });

    let status = score >= 80
        ? `<span class="pass">LULUS SELEKSI ðŸ‡®ðŸ‡©</span>`
        : `<span class="fail">TIDAK LULUS</span>`;

    document.getElementById("result").innerHTML =
        `Nilai Akhir: ${score}/100<br>${status}`;
}
